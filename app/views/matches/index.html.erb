<h1>Matches</h1>
<% if @matches.empty? then %>
  <div class='container-fluid mt-5'>
    <p>There isn't anyone to match with in your area yet. Please check back soon!</p>
  </div>
<% else %>
  <ul id='matches' class='list d-flex flex-column w-100 mt-5 mb-5'>
  <% @matches.each do |match| %>
    <li class='p-3 p-md-5'>
      <article class="card">
        <% if match.avatar.attached? then %>
          <%= image_tag match.avatar.variant(resize: "720x720"), class: 'card-img-top', alt: :avatar %>
        <% else %>
          <%= image_tag "https://via.placeholder.com/728x90.png?text=No+Picture+Provided", class: 'card-img-top', alt: :avatar %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= match.name %></h5>
          <p class="card-text"><%= match.description %></p>
        </div>
      </article>
    </li>
  <% end %>
  </ul>
<% end %>
